@model Portfolio.ViewModels.LoginViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container pt">
    <div class="row mt">
        <div class="col-lg-6 col-lg-offset-3 centered">
            <h3>Log In</h3>
            <hr>
            <p>Use a local account to log in.</p>
        </div>
    </div>
    <div class="row mt">
        <div class="col-lg-8 col-lg-offset-2">
            <form class="contact-form" method="post" asp-controller="Auth" asp-action="Login"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Your Name" required/>
                </div>

                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Your Email" required/>
                </div>

                <div class="form-group">
                    <label asp-for="RememberMe" class="form-label">
                        <input asp-for="RememberMe" class="form-control"/>
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>

                <div class="form-send">
                    <button type="submit" class="btn btn-large">Log In</button>
                </div>
                
                <div>
                    <p>
                        <a id="forgot-password" href="#">Forgot your password?</a>
                    </p>
                    <p>
                        <a href="#">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
    <!-- /row -->
</div>
<!-- /container -->