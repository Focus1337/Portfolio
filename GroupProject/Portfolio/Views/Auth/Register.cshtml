@model Portfolio.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
     Layout = "_Layout1";
}

<div class="container">
    <div class="login-form">
        <div class="row mt">
            <div class="col-lg-6 col-lg-offset-3 centered">
                <h3>Registering a new user</h3>
                <hr>
                <p>Register to use a unique content.</p>
            </div>
        </div>
        <div class="row mt">
            <div class="col-lg-8 col-lg-offset-2">
                
                <form class="contact-form" method="post" asp-controller="Auth" asp-action="Register">
                    <div class="alert alert-info alert-dismissable" asp-validation-summary="ModelOnly">
                        <a class="panel-close close" data-dismiss="alert">×</a> 
                        <i class="fa fa-coffee"></i>
                    </div>
                    
                    <div class="form-group">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Your Email" required/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Your Password" required/>
                        <span asp-validation-for="Password"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Your Password" required/>
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>

                    <div class="form-send">
                        <button type="submit" class="btn btn-large">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /row -->
</div>
<!-- /container -->