@model Portfolio.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "title";
     Layout = "_Master";
}

<div class="container">
    <div class="login-form">
        <div class="row mt">
            <div class="col-lg-6 col-lg-offset-3 centered">
                <h3>Registering a new user</h3>
                <hr>
                <p>Register on your site to be able to use unique content.</p>
            </div>
        </div>
        <div class="row mt">
            <div class="col-lg-8 col-lg-offset-2">
                
                <form class="contact-form" method="post" asp-controller="Auth" asp-action="Register">
                    <div asp-validation-summary="ModelOnly"></div>
                    
                    <div class="form-group">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Your Email" required/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Your Password" required/>
                        <span asp-validation-for="Password"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Your Password" required/>
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>

                    <div class="form-send">
                        <button type="submit" class="btn btn-large">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /row -->
</div>
<!-- /container -->