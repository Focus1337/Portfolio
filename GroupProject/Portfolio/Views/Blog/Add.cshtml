@model Portfolio.ViewModels.AddBlogViewModel

@{
    ViewBag.Title = "Add Blog";
    Layout = "_Layout2";
}


<div class="container pt100">
  <div class="row mt">
    <div class="col-lg-6 col-lg-offset-3 centered">
      <h3>Blog</h3>
      <hr>
      <p>Write new blog post</p>
    </div>
  </div>
  <div class="row mt">
    <div class="col-lg-8 col-lg-offset-2">

      <form class="contact-form" asp-controller="Blog" asp-action="Add">
        <div class="alert alert-info alert-dismissable" asp-validation-summary="ModelOnly">
          <a class="panel-close close" data-dismiss="alert">×</a> 
          <i class="fa fa-coffee"></i>
        </div>
        <div class="form-group">
          <input type="text" asp-for="Title" class="form-control" placeholder="Blog Title" required/>
        </div>
        <div class="form-group">
          <textarea class="form-control" asp-for="Text" placeholder="Blog Content" rows="5" required></textarea>
        </div>
        <div class="form-group">
          <input type="text" asp-for="Tags" class="form-control" placeholder="Separate tags with semicolon" required/>
        </div>

        <div class="form-send">
          <button type="submit" class="btn btn-large">Post</button>
        </div>
      </form>

    </div>
  </div>
  <!-- /row -->
</div>
<!-- /container -->