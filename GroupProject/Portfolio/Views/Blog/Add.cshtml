@model Portfolio.ViewModels.AddBlogViewModel

@{
    ViewBag.Title = "Add Blog";
    Layout = "_Layout2";
}


<div class="container pt100">
  <div class="row mt">
    <div class="col-lg-6 col-lg-offset-3 centered">
      <h3>Blog</h3>
      <hr>
      <p>Write new blog post</p>
    </div>
  </div>
  <div class="row mt">
    <div class="col-lg-8 col-lg-offset-2">

      <form class="contact-form" asp-controller="Blog" asp-action="Add">
        <div class="alert alert-info alert-dismissable" asp-validation-summary="ModelOnly">
          <a class="panel-close close" data-dismiss="alert">×</a> 
          <i class="fa fa-coffee"></i>
        </div>
        <div class="form-group">
          <input type="text" asp-for="Title" id="title" class="form-control" placeholder="Blog Title" required/>
        </div>
        <div class="form-group">
          <textarea class="form-control" id="content" asp-for="Text" placeholder="Blog Content" rows="5" required></textarea>
        </div>
        <div class="form-group">
          <input type="text" asp-for="Tags" id="tags" class="form-control" placeholder="Separate tags with semicolon" required/>
        </div>

        <div class="form-send">
          <button type="submit" class="btn btn-large">Post</button>
        </div>
      </form>
    </div>
  </div>
  <!-- /row -->
</div>
<!-- /container -->

@* post live preview *@
<div id="grey">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 centered">
        <h3>Post preview</h3>
        <hr>
      </div>
      <div class="col-lg-8 col-lg-offset-2">
        <p>
          <img src="~/img/user.png" width="50px" height="50px" alt="">
          <ba><a href="#">Author</a></ba>
        </p>
        <p>
          <bd>@DateTime.Now.ToString("d")</bd>
        </p>
        <h4 id="titlePreview">
          @* title preview *@
        </h4>
        <p><img class="img-responsive" src="img/blog01.jpg" alt=""></p>
        @* text area preview *@
        <div id="contentPreview">
              
        </div>
        <br>
        <p>
          <bt>TAGS:
            @* tags preview *@
            <a class="badge" id="tagsPreview" href="#"><b></b></a>
          </bt>
        </p>
        <hr>
        <p><a href="#"># Back</a></p>
      </div>

    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>


<script>
let contentPreview = document.getElementById("contentPreview");
let content = document.getElementById("content");
let tagsPreview = document.getElementById("tagsPreview");
let tags = document.getElementById("tags");
let titlePreview = document.getElementById("titlePreview");
let title = document.getElementById("title");

content.oninput = () => {
contentPreview.innerHTML = content.value;
}

tags.oninput = () => {
tagsPreview.innerHTML = tags.value;
}

title.oninput = () => {
titlePreview.innerHTML = title.value;
}
</script>